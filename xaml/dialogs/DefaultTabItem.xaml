<!-- デフォルトダイアログ -->
<TabItem
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="DefaultDialog"
    Width="700"
    Height="300"
    Visibility="Collapsed">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="DefaultDialogTitle" FontSize="25" Grid.Row="0" Grid.Column="0"></TextBlock>
        <TextBlock x:Name="DefaultDialogMessage" FontSize="21" Grid.Row="1" Grid.Column="0"></TextBlock>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
            <Button Style="{StaticResource ResourceKey=StyleButton}"
                x:Name="DefaultDialogOkButton"
                Content="OK"
                Background="{StaticResource ResourceKey=ColorYellow600}" />
            <Button Style="{StaticResource ResourceKey=StyleButton}"
                x:Name="DefaultDialogCancelButton"
                Content="キャンセル"
                Background="{StaticResource ResourceKey=ColorGray500}" />
        </StackPanel>
    </Grid>
</TabItem>