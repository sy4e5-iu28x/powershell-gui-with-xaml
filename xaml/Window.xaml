<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Main Window" 
    Height="500" 
    Width="700"
    MinHeight="400"
    MinWidth="600">
        <Grid>
            <!-- ナビゲーションビュー -->
            <Grid Background="{StaticResource ResourceKey=ColorGray400}">
                <TabControl x:Name="WindowTabControl" Margin="0" BorderThickness="0" TabStripPlacement="Left">
                    <TabItem Header="" Visibility="Hidden"/>
                    <TabItem x:Name="ManagementTabItem" Header="データ管理"  Style="{StaticResource ResourceKey=StyleTabItem}"/>
                    <TabItem x:Name="DefinitionTabItem" Header="データ定義" Style="{StaticResource ResourceKey=StyleTabItem}"/>
                    <TabItem x:Name="ConfigurationTabItem" Header="設定" Style="{StaticResource ResourceKey=StyleTabItem}"/>
                </TabControl>
            </Grid>
            <!-- ダイアログ -->
            <Grid>
                <Border Background="{StaticResource ResourceKey=ColorBlack}" Opacity="0.7" Visibility="Collapsed"/>
            </Grid>
        </Grid>
    </Window>