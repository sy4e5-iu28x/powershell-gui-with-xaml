<!-- 設定 -->
<TabItem
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="ConfigurationTabItem" Header="設定" Style="{StaticResource ResourceKey=StyleTabItem}">
    <Grid
        Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Grid.Row="0"
            FontSize="25">
            データソースファイル保存場所
        </TextBlock>
        <TextBlock
            Grid.Column="0"
            Grid.Row="1"
            x:Name="ConfigurationAppDataSourceFilePath"
            FontSize="21"
            TextWrapping="Wrap"
            VerticalAlignment="Center">
        </TextBlock>
        <Button
            Grid.Column="1"
            Grid.Row="1"
            x:Name="ConfigurationAppDataSourceFilePathChangeButton"
            Style="{StaticResource ResourceKey=StyleButton}"
            Content="変更"
            Background="{StaticResource ResourceKey=ColorYellow600}"/>
    </Grid>
</TabItem>